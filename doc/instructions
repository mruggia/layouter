upboard setup:

install ubuntu desktop 18.04 lts

install upboard kernerl
  https://github.com/up-board/up-community/wiki/Ubuntu_18.04

install remote desktop
  http://c-nergy.be/blog/?p=16817

install asl ros
  https://github.com/ethz-asl/mav_tools/wiki

install atom

enable ssh
  sudo apt install openssh-server
  sudo ufw allow ssh

install dynamixel sdk
  git clone https://github.com/ROBOTIS-GIT/DynamixelSDK.git
  cd ~/DynamixelSDK/python
  sudo python setup.py install
  sudo usermod -a -G dialout $USER
  sudo reboot

clean compile
  cd catkin_ws
  catkin build marker --force-cmake --pre-clean

------

screen config
sudo nano ~/.screenrc

layout save default
startup_message off

split
split -v
focus down
split -v

screen -t bash
screen -t screen1
screen -t screen2
screen -t screen3
screen -t screen4

focus up
focus left
select 1
focus right
select 2
focus left
focus down
select 3
focus right
select 4
focus up
focus left

bindkey -k k1 eval "focus up" "focus left"
bindkey -k k2 eval "focus up" "focus right"
bindkey -k k3 eval "focus down" "focus left"
bindkey -k k4 eval "focus down" "focus right"
bind q quit
